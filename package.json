{
    "version": "1.0.0",
    "name": "error_server",
    "type": "module",
    "scripts": {
        "start": "nodemon ./index.ts",
        " === Common Test === ": "",
        "global-test": "pnpm check-types && pnpm lint-fix && pnpm unit-test-once",
        "unit-test-watch": "",
        "unit-test-once": "",
        "lint": "eslint .",
        "lint-fix": "eslint . --fix",
        "check-types": "tsc --noEmit",
        " === Pnpm === ": "",
        "install-dependencies": "pnpm i",
        "update-dependencies": "pnpm update",
        "update-submodule": "git submodule update --init --recursive",
        " === Build === ": "",
        "build": "ncc build index.ts -m -o build",
        "build-run": "node build/index.js",
        "clean": "rd /s /q build || rm -rf build",
        "clean:all": "rd /s /q build node_modules || rm -rf build node_modules"
    },
    "devDependencies": {
        "@stylistic/eslint-plugin": "^2.12.0",
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/node": "^22.10.1",
        "@typescript-eslint/eslint-plugin": "^8.17.0",
        "@typescript-eslint/parser": "^8.17.0",
        "@vercel/ncc": "^0.38.1",
        "autoprefixer": "^10.4.20",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "eslint": "^8.57.1",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-config-airbnb-typescript": "^18.0.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-import": "^2.31.0",
        "eslint-plugin-jsx-a11y": "^6.10.2",
        "eslint-plugin-prettier": "^5.2.1",
        "eslint-plugin-promise": "^7.2.1",
        "eslint-plugin-simple-import-sort": "^12.1.1",
        "express": "^4.18.2",
        "mariadb": "^3.2.3",
        "nodemon": "^3.0.3",
        "prettier": "^3.4.2",
        "sequelize": "^6.37.5",
        "tedious": "^18.6.1",
        "tsx": "^4.19.2",
        "typescript": "^5.7.2",
        "typescript-eslint": "^8.17.0",
        "vite": "^6.0.3"
    }
}
