{
    "version": "1.0.0",
    "name": "mds_api_server",
    "type": "module",
    "scripts": {
        "start": "nodemon ./index.ts",
        "start-prod": "tsx ./index.ts",
        " === Common Test === ": "",
        "global-test": "pnpm check-types && pnpm lint-fix && pnpm unit-test-once",
        "unit-test-watch": "vitest watch",
        "unit-test-once": "vitest run",
        "lint": "eslint .",
        "lint-fix": "eslint . --fix",
        "check-types": "tsc --noEmit",
        " === Pnpm === ": "",
        "install-dependencies": "pnpm i",
        "update-dependencies": "pnpm update",
        " === Database ===": "",
        "init-db": "sqlite3 ./src/database.db '' && sqlite3 ./src/database.db < ./documentation/dbInit.sqlite.sql"
    },
    "dependencies": {
        "bcrypt": "^5.1.1",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "ejs": "^3.1.10",
        "express": "^4.18.2",
        "jsonwebtoken": "^9.0.2",
        "sequelize": "^6.37.5",
        "socket.io": "^4.8.1",
        "swagger-ui-express": "^5.0.1",
        "tedious": "^18.6.1",
        "tsx": "^4.19.2",
        "typescript": "^5.7.2",
        "yamljs": "^0.3.0"
    },
    "devDependencies": {
        "@stylistic/eslint-plugin": "^2.12.0",
        "@types/bcrypt": "^5.0.2",
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/jsonwebtoken": "^9.0.7",
        "@types/node": "^22.10.1",
        "@types/swagger-ui-express": "^4.1.7",
        "@types/yamljs": "^0.2.34",
        "@typescript-eslint/eslint-plugin": "^8.17.0",
        "@typescript-eslint/parser": "^8.17.0",
        "autoprefixer": "^10.4.20",
        "eslint": "^8.57.1",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-config-airbnb-typescript": "^18.0.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-import": "^2.31.0",
        "eslint-plugin-jsx-a11y": "^6.10.2",
        "eslint-plugin-prettier": "^5.2.1",
        "eslint-plugin-promise": "^7.2.1",
        "eslint-plugin-simple-import-sort": "^12.1.1",
        "nodemon": "^3.0.3",
        "prettier": "^3.4.2",
        "sqlite3": "^5.1.7",
        "typescript-eslint": "^8.17.0",
        "vitest": "^3.0.4"
    }
}
